@page
@model Hospital.App.Frontend.Pages.CrearDiagnosticoModel
@{
    ViewData["Title"] = "Crear Diagnostico";
}

<h1>Crear Diagnostico</h1>
<h3>@TempData["idpaciente"]</h3>
<h3> @ViewData["Error"]</h3>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 col-lx-6">
            <form method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.diagnostico.Id" />
                <div class="col-8 mb-3">
                    <label asp-for="@Model.diagnostico.DiagnosticoMedico" class="form-label">Diagnóstico</label>
                    <input type="text" asp-for="@Model.diagnostico.DiagnosticoMedico" class="form-control" id="FechaHora">
                    <span asp-validation-for="@Model.diagnostico.DiagnosticoMedico" class="text-danger"></span>
                </div>
                <div class="col-8 mb-3">
                    <label asp-for="@Model.historiaClinica.Id" class="form-label">HistClinId</label>
                    <input type="text" asp-for="@Model.historiaClinica.Id" class="form-control" id="txtValor" readonly>
                    <span asp-validation-for="@Model.historiaClinica.Id" class="text-danger"></span>
                </div>
                <div class="col-8 mb-3">
                    <label asp-for="@Model.paciente.Id" class="form-label">PacienteId</label>
                    <input type="text" asp-for="@Model.paciente.Id" class="form-control" id="txtPacienteId" readonly>
                    <span asp-validation-for="@Model.paciente.Id" class="text-danger"></span>
                </div>
                
                

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
        <div class="col">
            <div class="carousel slide" id="mainSlider" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/familiar.jpg" alt="" class="d-block w-100">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
