@page
@model Hospital.App.Frontend.Pages.EditarSugerenciaModel
@{
}
<h1>Editar Sugerencia</h1>
<h3>@ViewData["Error"]</h3>
<form method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
    <input type="hidden" asp-for="sugerenciasCuidado.Id" />
    <div class="mb-3">
        <label asp-for="sugerenciasCuidado.Descripcion" class="form-label">Descripcion</label>
        <input type="text" asp-for="sugerenciasCuidado.Descripcion" class="form-control" id="txtDescripcion">
        <span asp-validation-for="sugerenciasCuidado.Descripcion" class="text-danger"></span>
    </div>
    <div class="col-8 mb-3">
        <label asp-for="@Model.historiaClinica.Id" class="form-label">HistClinId</label>
        <input type="text" asp-for="@Model.historiaClinica.Id" class="form-control" id="txtValor" readonly>
        <span asp-validation-for="@Model.historiaClinica.Id" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
