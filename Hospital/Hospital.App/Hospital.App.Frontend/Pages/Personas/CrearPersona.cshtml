@page
@model Hospital.App.Frontend.Pages.CrearPersonaModel
@{
    ViewData["Title"] = "Crear Persona";

}

<h1>Crear Persona</h1>
<h3>@ViewData["Error"]</h3>
<form method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
    <div class="mb-3">
        <label asp-for="Persona.Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Persona.Nombre" class="form-control" id="Nombre">
        <span asp-validation-for="Persona.Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Persona.Apellidos" class="form-label">Apellidos</label>
        <input type="text" asp-for="Persona.Apellidos" class="form-control" id="txtApellidos">
        <span asp-validation-for="Persona.Apellidos" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Persona.NumeroTelefono" class="form-label">Numero de Telefono</label>
        <input type="text" asp-for="Persona.NumeroTelefono" class="form-control" id="txtNumeroTelefono">
        <span asp-validation-for="Persona.NumeroTelefono" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Persona.Genero" class="form-label">Genero</label>
        <input type="text" asp-for="Persona.Genero" class="form-control" id="txtGenero">
        <span asp-validation-for="Persona.Genero" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
