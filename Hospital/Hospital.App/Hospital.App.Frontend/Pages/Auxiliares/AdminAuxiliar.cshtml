@page
@model Hospital.App.Frontend.Pages.AdminAuxiliarModel
@{
}

<h1>Módulo de Administración - Auxiliares</h1>
<hr>

<div>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link fs-5" aria-current="page" asp-page="/Auxiliares/AdminAuxPaciente">Pacientes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-5" aria-current="page" asp-page="/Auxiliares/AdminAuxMedico">Médicos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-5" aria-current="page" asp-page="/Auxiliares/AdminAuxFmliar">Familiar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fs-5" aria-current="page" asp-page="/Auxiliares/AdminAuxEnfermera">Enfermeras</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active fs-5" aria-current="page" href="#" >Auxiliares</a>
        </li>
    </ul>
</div>
<div class="mt-3">
    <a asp-page="/Auxiliares/CrearAuxiliar" class="btn btn-success btn-md" type="button">Crear Auxiliar</a>
</div>
<div class="container my-3">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-8 col-lx-8">
            <div class="mt-3">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">Id</th>
                            <th class="text-center" scope="col">Nombre</th>
                            <th class="text-center" scope="col">Apellidos</th>
                            <th class="text-center" scope="col">Teléfono</th>
                            <th class="text-center" scope="col">Género</th>
                            <th class="text-center" scope="col" colspan="5">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var auxiliar in Model.Auxiliares)
                    {
                            <tr>
                                <td scope="row" class="text-center">@auxiliar.Id</td>
                                <td class="text-center">@auxiliar.Nombre</td>
                                <td class="text-center">@auxiliar.Apellidos</td>
                                <td class="text-center">@auxiliar.NumeroTelefono</td>
                                <td class="text-center">@auxiliar.Genero</td>
                                <td class="text-center"><a asp-page="/Auxiliares/EditarAuxiliar" asp-route-id="@auxiliar.Id">Editar</a></td>
                                <td class="text-center"><a asp-page="/Auxiliares/VerAuxiliar" asp-route-id="@auxiliar.Id">Detalle</a></td>
                                <td class="text-center"><a asp-page="/Auxiliares/EliminarAuxiliar" asp-route-id="@auxiliar.Id">Eliminar</a></td>
                            </tr>
                    }
                </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4 col-lx-4">
            <div class="carousel slide" id="mainSlider" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/auxiliar.png" alt="" class="d-block w-100">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
