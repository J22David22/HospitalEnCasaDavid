@page
@model IndexModel
@{
    ViewData["Title"] = "Home SYDT";
}

<header>
    <div class="text-center">
        <h1 class="display-4 bg-info text-light mb-0 p-1">Salud con calor de hogar</h1>
    </div>
</header>

<div class="container my-3">
    <div class="row align-items-center">
        <div class="col-sm-12 col-md-4 col-lg-4 col-lx-4">
            <form action="/Pacientes/LoginPacientes">
                <div class="mb-3">
                    <label class="form-label">
                        <h2>Paciente</h2>
                    </label>
                    <button type="submit" class="btn btn-primary">
                        < Entrar </button>
                </div>
            </form>

            <form action="/Familiares/LoginFamiliares">
                <div class="mb-3">
                    <label class="form-label">
                        <h2>Familiar</h2>
                    </label>
                    <button type="submit" class="btn btn-primary">
                        < Entrar </button>
                </div>
            </form>

            <form action="/Auxiliares/AdminAuxiliar">
                <div class="mb-3">
                    <label class="form-label">
                        <h2>Auxiliar</h2>
                    </label>
                    <button type="submit" class="btn btn-primary">
                        < Entrar </button>
                </div>
            </form>

            <form action="/Medicos/LoginMedicos">
                <div class="mb-3">
                    <label class="form-label">
                        <h2>Médico</h2>
                    </label>
                    <button type="submit" class="btn btn-primary">
                        < Entrar </button>
                </div>
            </form>
            <form action="/Enfermeras/LoginEnfermeras">
                <div class="mb-3">
                    <label class="form-label"> 
                        <h3>Enfermeras</h3>
                    </label>
                    <button type="submit" class="btn btn-primary"> <   Entrar </button>
                </div>
            </form> 
        </div>
        <div class="col-sm-12 col-md-8 col-lg-8 col-lx-8">
            <div>
                <h1 class="display-6 fw-bold">Bienvenido</h1>
                <p class="text-dark fs-4">Elige tu tipo de usuario y conoce los servicios que tenemos para ti</p>
            </div>
            <div class="carousel slide" id="mainSlider" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/slide1.jpg" alt="" class="d-block w-70">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/slide2.png" alt="" class="d-block w-70">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/slide4.jpg" alt="" class="d-block w-70">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  
